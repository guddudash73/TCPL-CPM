{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },

    "lint": {
      "dependsOn": [],
      "outputs": []
    },

    "check-types": {
      "dependsOn": ["^check-types"],
      "outputs": []
    },

    "test": {
      "dependsOn": ["^test"],
      "outputs": ["coverage/**"]
    },

    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"]
    }
  }
}
