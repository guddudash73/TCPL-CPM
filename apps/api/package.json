{
  "name": "@tcpl-cpm/api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "cross-env APP_ENV=development tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "cross-env NODE_ENV=production APP_ENV=production node --enable-source-maps dist/server.js",
    "check-types": "tsc --noEmit",
    "lint": "echo api lint",
    "test": "echo api test",
    "db:generate": "prisma generate",
    "db:migrate:create": "prisma migrate dev --create-only --name auth_schema",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force --skip-seed"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@tcpl-cpm/config": "file:../../packages/config",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@tcpl-cpm/tsconfig": "file:../../packages/tsconfig",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "cross-env": "^10.0.0",
    "prisma": "^6.15.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
