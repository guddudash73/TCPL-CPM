{
  "name": "@tcpl-cpm/api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "cross-env APP_ENV=development tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "cross-env NODE_ENV=production APP_ENV=production node --enable-source-maps dist/server.js",
    "check-types": "tsc --noEmit",
    "postinstall": "prisma generate",
    "lint": "echo api lint",
    "test": "echo api test",
    "db:generate": "prisma generate",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@tcpl-cpm/config": "file:../../packages/config",
    "@prisma/client": "^6.15.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "@tcpl-cpm/tsconfig": "file:../../packages/tsconfig",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "cross-env": "^10.0.0",
    "prisma": "^6.15.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
