{
  "name": "@tcpl-cpm/api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "cross-env APP_ENV=development tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "cross-env NODE_ENV=production APP_ENV=production node --enable-source-maps dist/server.js",
    "start:prod:local": "dotenv -e ./.env.production --node --enable-source-maps dist/server.js",
    "check-types": "tsc --noEmit",
    "lint": "echo api lint",
    "test": "jest -c jest.config.ts",
    "test:watch": "jest -c jest.config.ts --watch",
    "test:ci": "jest -c jest.config.ts --runInBand",
    "test:dev": "cross-env ENV_FILE=.env jest -c jest.config.ts",
    "db:generate": "prisma generate",
    "db:migrate:create": "prisma migrate dev --create-only --name auth_schema",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:status": "prisma migrate status --schema=./prisma/schema.prisma",
    "db:status:test": "dotenv -e ./.env.test -- prisma migrate status --schema=./prisma/schema.prisma",
    "db:status:prod": "dotenv -e ./.env.production -- prisma migrate status --schema=./prisma/schema.prisma",
    "db:deploy:test": "dotenv -e ./.env.test -- prisma migrate deploy --schema=./prisma/schema.prisma",
    "db:reset:test": "dotenv -e ./.env.test -- prisma migrate reset --force --skip-seed --schema=./prisma/schema.prisma",
    "db:seed:test": "dotenv -e ./.env.test -- tsx ./prisma/seed/003_catalog.ts",
    "db:deploy:prod": "dotenv -e ./.env.production -- prisma migrate deploy --schema=./prisma/schema.prisma",
    "db:studio": "prisma studio --schema=./prisma/schema.prisma",
    "db:studio:test": "dotenv -e ./.env.test -- prisma studio --schema=./prisma/schema.prisma",
    "db:seed": "tsx ./prisma/seed/003_catalog.ts",
    "db:reset": "prisma migrate reset --force --skip-seed",
    "k6:smoke": "k6 run k6/composite_smoke.js"
  },
  "prisma": {
    "seed": "tsx /prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@tcpl-cpm/config": "file:../../packages/config",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "dotenv": "^16.6.1",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@tcpl-cpm/tsconfig": "file:../../packages/tsconfig",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.0.0",
    "dotenv": "^16.6.1",
    "dotenv-cli": "^10.0.0",
    "jest": "^30.1.3",
    "prisma": "^6.15.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
